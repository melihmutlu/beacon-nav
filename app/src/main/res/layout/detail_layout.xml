<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"  >
    â€‹
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/values"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label1"
        android:text="Average"
        android:textSize="15dp"
        android:layout_alignBottom="@id/values"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label2"
        android:text="Std. Deviation    "
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/values" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label3"
        android:text="Estimated Dist."
        android:textSize="15dp"
        android:layout_alignBottom="@id/values"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avg"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/label1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/std_dev"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/label2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/est_dist"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/label3"/>

</RelativeLayout>